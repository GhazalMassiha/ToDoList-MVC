@model ToDoList.Presentation.MVC.Models.TodoItemCreateViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewBag.Title = "افزودن کار جدید";
    var categories = ViewBag.Categories as List<ToDoList.Domain.Core.CategoryAgg.DTOs.CategoryDto>;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Title">عنوان:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDateString">تاریخ سررسید (مثال: 1404/08/30 ):</label>
        <input asp-for="DueDateString" class="form-control" placeholder="مثال: 1404/08/31" required />
        <span asp-validation-for="DueDateString" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">دسته‌بندی:</label>
        <select asp-for="CategoryId" class="form-control" required>
            <option value="">انتخاب کنید…</option>
            @foreach (var cat in categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">افزودن</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}