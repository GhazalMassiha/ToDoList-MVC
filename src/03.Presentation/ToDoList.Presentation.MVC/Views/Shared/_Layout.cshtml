<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - ToDoList</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <a asp-controller="Todo" asp-action="Index">لیست کارها</a>
            @{
                var online = ToDoList.Presentation.MVC.Database.InMemoryDatabase.OnlineUser;
            }
            @if (online != null)
            {
                <span>کاربر: @online.Username</span>
                <a asp-controller="User" asp-action="Logout">خروج</a>
            }
            else
            {
                <a asp-controller="User" asp-action="Login">ورود</a>
                <a asp-controller="User" asp-action="Register">ثبت‌نام</a>
            }
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 ToDoList App</p>
    </footer>

    <!-- Optional scripts section: render only if the view defines it -->
    @RenderSection("Scripts", required: false)
</body>
</html>